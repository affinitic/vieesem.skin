<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>
<div metal:define-macro="portlet"
     tal:condition="python:user.has_role(['Manager', 'Site Administrator'], here)">
    <dl id="portlet-gestion-db">
        <dt class="portletHeaderDB">
            <span class="portletTopLeft"></span>
            <span class="portletTopRight"></span>
            Gestion de la DB
        </dt>
        <div class="portletItemDB">
            <dt class="menu-titre">
                &#10023; Les formations
            </dt>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-chercher-une-formation"
                       class="lien-menu-gestiondb">
                       &#10147; Chercher les formations
                    </a>
                </dd>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-ajouter-une-formation"
                       class="lien-menu-gestiondb">
                       &#10147; Ajouter une formation
                    </a>
                </dd>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-chercher-une-formation"
                       class="lien-menu-gestiondb">
                       &#10147; Modifier une formation
                    </a>
                </dd>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-lister-les-formations"
                       class="lien-menu-gestiondb">
                       &#10147; Lister les formations
                    </a>
                </dd>
            <div class="separation"></div>

            <dt class="menu-titre">
                &#10023; Les inscriptions
            </dt>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-chercher-une-inscription"
                       class="lien-menu-gestiondb">
                       &#10147; Chercher une inscription
                    </a>
                </dd>
                <dd>
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/gestion-de-la-base/les-formations/admin-lister-les-inscriptions"
                       class="lien-menu-gestiondb">
                       &#10147; Lister les inscriptions
                    </a>
                </dd>

            <div class="separation"></div>

        <dt class="portletFooterDB">
            <span class="portletBottomLeft"></span>
            <span class="portletBottomRight"></span>
        </dt>
     </dl>
</div>
</body>
</html>
